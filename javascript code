//Challeng 1: Your age in days

function ageindays(){

	var brithyear=prompt("what year were you born?");
var ageindayss=(2021-brithyear)* 365;
var h1 = document.createElement('h1')
var texanswer = document.createTextNode('you are '+ ageindayss +' days old ')
h1.setAttribute('id', 'ageindays');
h1.appendChild(texanswer);
document.getElementById('flex-box-result').appendChild(h1);
}
function reset(){
	document.getElementById('ageindays').remove();
}
